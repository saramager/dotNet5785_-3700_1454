<Window x:Class="PL.EnterToSystemWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Grid>
        <!--definde of rows and clons-->
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Label Grid.Column="0" Margin="173,100,54,38"/>
        <TextBox Grid.Row="1" Grid.Column="1" />
        <Label Grid.Row="2" Grid.Column="0"/>
        <PasswordBox Grid.Row="2" Grid.Column="1" Margin="17,17,46,44" />

        <!-- ID Label -->
        <Label Content="ID" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="56,0,0,0" FontSize="20" RenderTransformOrigin="2.272,0.262"/>
        <TextBox Text= "{Binding Id, Mode=TwoWay}" Grid.Column="2" HorizontalAlignment="Center" Height="18" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Center" Width="132"
                />

        <!-- Password Label -->
        <Label Content="Password" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,28,85,0" />
        <TextBox Grid.Column="2" HorizontalAlignment="Left" Margin="34,28,0,0" Grid.Row="2" TextWrapping="Wrap" Text="{Binding Password, Mode=TwoWay}" VerticalAlignment="Top" Width="120"/>

        <!--boutton-->
        <Button Grid.Column="2" Content="login " HorizontalAlignment="Center" Height="88" Margin="0,5,0,0" Grid.Row="3" VerticalAlignment="Top" Width="132" Click="LoginButton_Click"/>



    </Grid>
</Window>
