<Window x:Class="PL.EnterToSystemWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}"
        Title="Window1" Height="450" Width="800">
    <Grid Background="{StaticResource cream}">
        <!--definde of rows and clons-->
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- ID Label -->
        <Label Style="{StaticResource  SubHeaderLabel}"  Content="ID:" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="18" RenderTransformOrigin="2.272,0.262" Margin="0,20,8,0" FontFamily="Cooper Black"/>

        <!-- ID TextBox -->
        <TextBox Style="{StaticResource ElegantTextBox}" Text= "{Binding Id, Mode=TwoWay}" Grid.Column="2" HorizontalAlignment="Left" Height="40" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Bottom" Width="132" Margin="0,20,0,29" RenderTransformOrigin="0.588,1.196" />

        <!-- Password Label -->
        <Label  Style="{StaticResource SubHeaderLabel }" Content="Password:" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Right" FontSize="18" VerticalAlignment="Top" Margin="0,0,8,0" FontFamily="Cooper Black" />

        <!-- Password TextBox -->
        <TextBox  Style="{StaticResource  ElegantTextBox}" Grid.Column="2" HorizontalAlignment="Left" Margin="0,0,0,0" Grid.Row="2" TextWrapping="Wrap" Text="{Binding Password, Mode=TwoWay}" VerticalAlignment="Top" Width="132" Height="40"/>

        <!-- Login Button -->
        <Button Style="{StaticResource PrimaryBrownButton}"  Grid.Column="2" Content="login" HorizontalAlignment="Left" Height="40" Margin="0,60,0,0" Grid.Row="2" VerticalAlignment="Top" Width="132" Click="LoginButton_Click" FontFamily="Cooper Black"/>

        <!-- Image -->
        <Image Source="\Pictures\helpingLogo.png"   Grid.Column="2" HorizontalAlignment="Left" Height="225" Margin="171,-18,0,0" Grid.RowSpan="2" VerticalAlignment="Top" Width="363" Grid.ColumnSpan="2" />
        <Label Content="Welcome To Little Neshama"   Foreground="{StaticResource brown}"  HorizontalAlignment="Left" Margin="29,54,0,0" VerticalAlignment="Top" Width="561" Grid.ColumnSpan="3" FontSize="36" FontFamily="Cooper Black"/>
    </Grid>
</Window>
