<Window x:Class="PL.Volunteer.VolunteerListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Volunteer"
        mc:Ignorable="d"
        Title="VolunteerListWindow" Height="640" Width="800"
         Background="{StaticResource cream}"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40*" />
            <RowDefinition Height="500*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Internal, Upper Grid -->
        <Grid HorizontalAlignment="Stretch" Height="Auto" Grid.Row="0" VerticalAlignment="Stretch" Width="Auto">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Label Content="Is Active" HorizontalAlignment="Left" VerticalAlignment="Center"  Grid.Column="0"  Style="{StaticResource SubHeaderLabel}" Height="37"/>
            <ComboBox SelectedValue="{Binding FilterActive, Converter={StaticResource ConvertISActiveKey}}" Style="{StaticResource CustomComboBox}" 
             ItemsSource="{Binding Source={StaticResource IsActiveCollectionKey}}"  Grid.Column="1"  SelectionChanged="VolunteerFilter"/>

            <Label Content=" File to sort:" HorizontalAlignment="Left" Grid.Column="2" VerticalAlignment="Center"  Style="{StaticResource SubHeaderLabel}" Height="37"/>
            <ComboBox SelectedValue="{Binding Path=filedToSort, Mode=TwoWay}" Style="{StaticResource CustomComboBox}" 
           ItemsSource="{Binding Source={StaticResource FiledToFilterVlounteerColecthionKey}}" 
           HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Column="3"   SelectionChanged="VolunteerFilter"/>

        </Grid>

        <DataGrid Style="{StaticResource CustomDataGridStyle}"  Margin="5,0,5,5" Grid.Row="1" ItemsSource="{Binding Path=VolunteerList}"  IsReadOnly="True" AutoGenerateColumns="False"
                  EnableRowVirtualization="True" RowDetailsVisibilityMode="VisibleWhenSelected"
                  SelectedItem="{Binding SelectedVolunteer}"   MouseDoubleClick="lsvVolunteersList_MouseDoubleClick" SelectionChanged="DataGrid_SelectionChanged_1">
                    <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding ID}" Header="Id" Width="*" />
                <DataGridTextColumn Binding="{Binding fullName}" Header="Name" Width="auto" />
                <DataGridTemplateColumn Header="Is Active" Width="auto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <CheckBox IsEnabled="False" IsChecked="{Binding Path=active}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Binding="{Binding numCallsHandled}" Header="Handled Calls" Width="auto" />
                <DataGridTextColumn Binding="{Binding numCallsCancelled}" Header="Cancelled Calls" Width="auto" />
                <DataGridTextColumn Binding="{Binding numCallsExpired}" Header="Expired Calls" Width="auto" />
                <DataGridTextColumn Binding="{Binding CallId}" Header="Call ID" Width="*" />
                <DataGridTextColumn Binding="{Binding callT}" Header="Call Type" Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" 
                    Value="{Binding callT, Converter={StaticResource CallTypeToColorConverter}}" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <!-- "Delete" button column -->
                <DataGridTemplateColumn Header="Actions" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <!-- "Delete" button -->
                            <Button Content="Delete" Click="DeleteButton_Click" Style="{StaticResource DeleteButton}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                
            </DataGrid.Columns>
        </DataGrid>

        <!-- Button to add new volunteer -->
        <Button Content="Add" Grid.Row="2" HorizontalAlignment="Center" Height="50" Width="100" Click="AddButton_Click" 
                Style="{StaticResource PrimaryBrownButton}" />
    </Grid>
</Window>