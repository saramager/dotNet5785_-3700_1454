<Window x:Class="PL.Call.CallListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Call"
        mc:Ignorable="d"
        Title="CallListWindow" Height="450" Width="869"
        Background="{StaticResource cream}"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40*" />
            <RowDefinition Height="500*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--Internal, Upper Grid-->
        <Grid HorizontalAlignment="Stretch" Height="Auto" Grid.Row="0" VerticalAlignment="Stretch" Width="Auto">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />

            </Grid.ColumnDefinitions>

            <Label Content="File to filter:" HorizontalAlignment="Center" Grid.Column="2" VerticalAlignment="Top"  Style="{StaticResource SubHeaderLabel2}" Height="31" Width="124" Margin="0,1,0,0"/>
            <ComboBox SelectedValue="{Binding Path=filedToFilter, Mode=TwoWay}" Style="{StaticResource CustomComboBox}" 
                      ItemsSource="{Binding Source={StaticResource FiledToFilterCallColecthionKey}}"  Grid.Row="0" Grid.Column="3" SelectionChanged="CallFilter" Margin="0,-1,10,4" />

            <Label Content="Value to filter:" HorizontalAlignment="Center" Grid.Column="4"  Grid.Row="0" VerticalAlignment="Center" Style="{StaticResource SubHeaderLabel2}" Height="33" Width="114" Margin="0,-1,0,0" RenderTransformOrigin="0.733,0.456" />
            <TextBox Text="{Binding Filter, Mode=TwoWay}" Style="{StaticResource ElegantTextBox}"  Grid.Row="0" Grid.Column="5" HorizontalAlignment="Center" Height="30" TextWrapping="Wrap" Width="120" KeyDown="CallFilter" VerticalAlignment="Center" />

            <Label Content="File to sort:" HorizontalAlignment="Left"  Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Style="{StaticResource SubHeaderLabel2}" Height="31" />
            <ComboBox SelectedValue="{Binding Path=filedToSort, Mode=TwoWay}" Style="{StaticResource CustomComboBox}" Grid.Column="1"
                    Grid.Row="0"  ItemsSource="{Binding Source={StaticResource FiledToSortCallColecthionKey}}" SelectionChanged="CallSort" RenderTransformOrigin="-0.835,0.44" HorizontalAlignment="Left" VerticalAlignment="Center" Width="135" />
        </Grid>

        <!--DataGrid-->
        <DataGrid Style="{StaticResource CustomDataGridStyle}" Margin="0,5,0,5" Grid.Row="1" ItemsSource="{Binding Path=CallList}" IsReadOnly="True" AutoGenerateColumns="False"
                  EnableRowVirtualization="True" RowDetailsVisibilityMode="VisibleWhenSelected"
                  SelectedItem="{Binding SelectedCall}" MouseDoubleClick="lsvCallsList_MouseDoubleClick">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding ID}" Header="Id" Width="auto" />
                <DataGridTextColumn Binding="{Binding CallId}" Header="Call Id" Width="auto" />

                <DataGridTextColumn Binding="{Binding callT}" Header="Call Type" Width="auto">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" 
                                    Value="{Binding callT, Converter={StaticResource CallTypeToColorConverter}}" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Binding="{Binding openTime  ,StringFormat='dd/MM/yyyy HH:mm'}" Header="Open Time" Width="auto" />
                <DataGridTextColumn Binding="{Binding TimeEndTreat    ,StringFormat='{}{0:d\\.hh\\:mm\\:ss}'}"  Header="Time until call ends" Width="auto" />
                <DataGridTextColumn Binding="{Binding volunteerLast}" Header="Volunteer Last" Width="auto" />
                <DataGridTextColumn Binding="{Binding TimeEndTreat  ,StringFormat='{}{0:d\\.hh\\:mm\\:ss}'}"  Header="Time Treat took" Width="auto" />

                <DataGridTextColumn Binding="{Binding status}" Header="Call Status" Width="auto">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" 
                                    Value="{Binding status, Converter={StaticResource StatusToColorConverter}}" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Binding="{Binding numOfAssignments}" Header="Num of Assignments" Width="auto" />

                <!--"Delete" button column-->
                <DataGridTemplateColumn Header="Actions" Width="auto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Delete" Click="DeleteButton_Click" Style="{StaticResource DeleteButton}"
                                    Visibility="{Binding CallId, Converter={StaticResource ConvertBoolToVisibilityKey}}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!--"Cancel" button column-->
                <DataGridTemplateColumn Header="Actions" Width="auto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Cancel" Click="CancelButton_Click" Style="{StaticResource CancelButton}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!--Button to add new Call-->
        <Button Content="Add" Grid.Row="2" HorizontalAlignment="Center" Height="50" Width="100" Click="AddButton_Click"
                 Style="{StaticResource PrimaryBrownButton}"/>
    </Grid>
</Window>
