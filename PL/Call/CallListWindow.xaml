<Window x:Class="PL.Call.CallListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Call"
        mc:Ignorable="d"
        Title="CallListWindow" Height="450" Width="869"
        Background="{StaticResource cream}"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40*" />
            <RowDefinition Height="500*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--Internal, Upper Grid-->
        <Grid HorizontalAlignment="Stretch" Height="Auto" Grid.Row="0" VerticalAlignment="Stretch" Width="Auto">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Label Content="File to filter:" HorizontalAlignment="Left" Grid.Column="1" VerticalAlignment="Top"  Style="{StaticResource SubHeaderLabel2}" Height="36" Margin="118,3,0,0" Width="101" Grid.ColumnSpan="2"/>
            <ComboBox SelectedValue="{Binding Path=filedToFilter, Mode=TwoWay}" 
                      ItemsSource="{Binding Source={StaticResource FiledToFilterCallColecthionKey}}" Grid.Column="2" SelectionChanged="CallFilter" Margin="111,0,89,-9" Grid.ColumnSpan="2" />

            <Label Content="Value to filter:" HorizontalAlignment="Left" Grid.Column="3" VerticalAlignment="Top" Style="{StaticResource SubHeaderLabel2}" Height="33" Width="114" Margin="85,1,0,0" Grid.ColumnSpan="2" RenderTransformOrigin="0.733,0.456" />
            <TextBox Text="{Binding Filter, Mode=TwoWay}" Grid.Column="4" HorizontalAlignment="Left" Height="20" TextWrapping="Wrap" Width="126" KeyDown="CallFilter" Margin="34,0,0,0" />

            <Label Content="File to sort:" HorizontalAlignment="Left" Grid.Column="0" VerticalAlignment="Center" Style="{StaticResource SubHeaderLabel2}" Height="31" />
            <ComboBox SelectedValue="{Binding Path=filedToSort, Mode=TwoWay}" 
                      ItemsSource="{Binding Source={StaticResource FiledToSortCallColecthionKey}}" SelectionChanged="CallSort" Margin="144,1,56,-9" Grid.ColumnSpan="2" />
        </Grid>

        <!--DataGrid-->
        <DataGrid Style="{StaticResource CustomDataGridStyle}" Margin="0,5,0,5" Grid.Row="1" ItemsSource="{Binding Path=CallList}" IsReadOnly="True" AutoGenerateColumns="False"
                  EnableRowVirtualization="True" RowDetailsVisibilityMode="VisibleWhenSelected"
                  SelectedItem="{Binding SelectedCall}" MouseDoubleClick="lsvCallsList_MouseDoubleClick">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding ID}" Header="Id" Width="auto" />
                <DataGridTextColumn Binding="{Binding CallId}" Header="Call Id" Width="auto" />

                <DataGridTextColumn Binding="{Binding callT}" Header="Call Type" Width="auto">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" 
                                    Value="{Binding callT, Converter={StaticResource CallTypeToColorConverter}}" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Binding="{Binding openTime}" Header="Open Time" Width="auto" />
                <DataGridTextColumn Binding="{Binding timeEndCall}" Header="Time End Call" Width="auto" />
                <DataGridTextColumn Binding="{Binding volunteerLast}" Header="Volunteer Last" Width="auto" />
                <DataGridTextColumn Binding="{Binding TimeEndTreat}" Header="Time End Treat" Width="auto" />

                <DataGridTextColumn Binding="{Binding status}" Header="Call Status" Width="auto">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" 
                                    Value="{Binding status, Converter={StaticResource StatusToColorConverter}}" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Binding="{Binding numOfAssignments}" Header="Num of Assignments" Width="auto" />

                <!--"Delete" button column-->
                <DataGridTemplateColumn Header="Actions" Width="auto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Delete" Click="DeleteButton_Click" Style="{StaticResource DeleteButton}"
                                    Visibility="{Binding CallId, Converter={StaticResource ConvertBoolToVisibilityKey}}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!--"Cancel" button column-->
                <DataGridTemplateColumn Header="Actions" Width="auto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Cancel" Click="CancelButton_Click" Style="{StaticResource CancelButton}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!--Button to add new Call-->
        <Button Content="Add" Grid.Row="2" HorizontalAlignment="Center" Height="50" Width="100" Click="AddButton_Click"
                 Style="{StaticResource PrimaryBrownButton}"/>
    </Grid>
</Window>
