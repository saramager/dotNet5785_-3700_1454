<Window x:Class="PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="MainWindow" Height="640" Width="800"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}">
    <Grid Background="{StaticResource cream}">
        <Grid.RowDefinitions>
            <RowDefinition Height="312*" />
            <RowDefinition/>
            <RowDefinition Height="312*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="1" Grid.Row="0" Orientation="Vertical" Margin="85,30,97,37">
            <!-- Clock value -->
            <Label Content="{Binding CurrentTime}" FontWeight="Bold" FontSize="20" Width="190" Height="51" HorizontalAlignment="Center" Style="{StaticResource SubHeaderLabel}"/>
            <!-- Buttons -->
            <Button Content="Add One Minute"  IsEnabled="{Binding IsSimulatorWork, Converter={StaticResource ConvertBoolToNotBoolKey}}"  Click="clickAddOneMinute" HorizontalAlignment="Center" Width="190" Height="30" VerticalAlignment="Center" Style="{StaticResource MenuButton3}"/>
            <Button Content="Add One Hour"  IsEnabled="{Binding IsSimulatorWork, Converter={StaticResource ConvertBoolToNotBoolKey}}"  Click="clickAddOnehour" HorizontalAlignment="Center" Width="190" Height="30" VerticalAlignment="Center" Style="{StaticResource MenuButton2}"/>
            <Button Content="Add One Day" IsEnabled="{Binding IsSimulatorWork, Converter={StaticResource ConvertBoolToNotBoolKey}}"  Click="clickAddOneDay" HorizontalAlignment="Center" Width="190" Height="30" VerticalAlignment="Center" Style="{StaticResource MenuButton4}"/>
            <Button Content="Add One Month" IsEnabled="{Binding IsSimulatorWork, Converter={StaticResource ConvertBoolToNotBoolKey}}"  Click="clickAddOneMonth" HorizontalAlignment="Center" Width="190" Height="30" VerticalAlignment="Center" Style="{StaticResource MenuButton2}"/>
            <Button Content="Add One Year" IsEnabled="{Binding IsSimulatorWork, Converter={StaticResource ConvertBoolToNotBoolKey}}"  Click="clickAddOneYear" Width="190" Height="30" Style="{StaticResource MenuButton3}"/>
        </StackPanel>

        <!--Update Risk Range-->
        <TextBox HorizontalAlignment="Left" Height="47" Margin="142,81,0,0" TextWrapping="Wrap" Text="{Binding RiskRange, Mode=TwoWay}" VerticalAlignment="Top" Width="156" Style="{StaticResource ElegantTextBox}"/>
        <Button Content="Update Risk Range"  IsEnabled="{Binding IsSimulatorWork, Converter={StaticResource ConvertBoolToNotBoolKey}}"  HorizontalAlignment="Left" Height="77" VerticalAlignment="Top" Width="220" Click="SetRiskRangeButton_Click" Margin="107,156,0,0" Style="{StaticResource MenuButton4}"/>

        <!-- list of volunteers -->
        <Button Grid.Column="1" Content="Handle Volunteers" HorizontalAlignment="Left" Height="77" Margin="216,44,0,0" Grid.Row="2" VerticalAlignment="Top" Width="156" Click="ButtonVolunteerList_Click" Style="{StaticResource MenuButton2}"/>

        <!-- list of calls -->
        <Button Grid.Column="1" Content="Handle Calls" HorizontalAlignment="Left" Height="77" Margin="216,158,0,0" Grid.Row="2" VerticalAlignment="Top" Width="156" Click="ButtonCallList_Click" Style="{StaticResource MenuButton2}" RenderTransformOrigin="0.41,0.487"/>

        <!-- reset DB -->
        <Button Content="Restet DB" IsEnabled="{Binding IsSimulatorWork, Converter={StaticResource ConvertBoolToNotBoolKey}}" HorizontalAlignment="Left" Height="77" Margin="38,44,0,0" Grid.Row="2" VerticalAlignment="Top" Width="156" Click="ButtonReset_Click" Style="{StaticResource MenuButton3}" Grid.Column="1"/>

        <!-- Initialization -->
        <Button Content="Initialization" HorizontalAlignment="Left" Height="77" Margin="38,155,0,0" Grid.Row="2" VerticalAlignment="Top" Width="156" Click="Initialize_Click" Style="{StaticResource MenuButton3}" Grid.Column="1"  IsEnabled="{Binding IsSimulatorWork, Converter={StaticResource ConvertBoolToNotBoolKey}}" />

        <!-- Statistics Panel -->
        <GroupBox Header="Calls Statutes" HorizontalAlignment="Left" Background="White" VerticalAlignment="Center" Margin="10,0,0,0" Width="180" Height="292" MinHeight="250" Grid.Row="2" FontSize="20" FontFamily="Cooper Black">
            <Grid Margin="5,0,5,0" Height="253">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Labels inside Statistics -->
                <Label Grid.Column="0" Content="Open calls:" HorizontalAlignment="Left" Style="{StaticResource SubHeaderLabel}" FontSize="14" FontFamily="Arial" />
                <Label Grid.Column="1" Content="{Binding CallSums[0]}" HorizontalAlignment="Right" Style="{StaticResource SubHeaderLabel}" FontSize="14" />

                <Label Grid.Column="0" Content="Calls in treat:" HorizontalAlignment="Left" Grid.Row="1" Style="{StaticResource SubHeaderLabel}" FontSize="14" FontFamily="Arial" />
                <Label Grid.Column="1" Content="{Binding CallSums[1]}" HorizontalAlignment="Right" Grid.Row="1" Style="{StaticResource SubHeaderLabel}" FontSize="14" />

                <Label Grid.Column="0" Content="Close calls:" HorizontalAlignment="Left" Grid.Row="2" Style="{StaticResource SubHeaderLabel}" FontSize="14" FontFamily="Arial" />
                <Label Grid.Column="1" Content="{Binding CallSums[2]}" HorizontalAlignment="Right" Grid.Row="2" Style="{StaticResource SubHeaderLabel}" FontSize="14" />

                <Label Grid.Column="0" Content="Expired calls:" HorizontalAlignment="Left" Grid.Row="3" Style="{StaticResource SubHeaderLabel}" FontSize="14" FontFamily="Arial" />
                <Label Grid.Column="1" Content="{Binding CallSums[3]}" HorizontalAlignment="Right" Grid.Row="3" Style="{StaticResource SubHeaderLabel}" FontSize="14" />

                <Label Grid.Column="0" Content="Open in risk calls:" HorizontalAlignment="Left" Grid.Row="4" Style="{StaticResource SubHeaderLabel}" FontSize="14" FontFamily="Arial" />
                <Label Grid.Column="1" Content="{Binding CallSums[4]}" HorizontalAlignment="Right" Grid.Row="4" Style="{StaticResource SubHeaderLabel}" FontSize="14" />

                <Label Grid.Column="0" Content="Treat in risk calls:" HorizontalAlignment="Left" Grid.Row="5" Style="{StaticResource SubHeaderLabel}" FontSize="14" FontFamily="Arial" />
                <Label Grid.Column="1" Content="{Binding CallSums[5]}" HorizontalAlignment="Right" Grid.Row="5" Style="{StaticResource SubHeaderLabel}" FontSize="14" />
            </Grid>
        </GroupBox>
        <Grid HorizontalAlignment="Left" Height="312" Margin="200,0,0,0" Grid.Row="2" VerticalAlignment="Center" Width="180">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="0.5*" />
                <RowDefinition Height="2*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <TextBox Style="{StaticResource ElegantTextBox}" Grid.Row="2"  Text="{Binding Interval}"/>
            <Button Style="{StaticResource MenuButton}" Grid.Row="4" Click="ButtonSimulator_Click" Content="{Binding IsSimulatorWork,  Converter= {StaticResource ConvertTextSimulatorStateKey}}"/>
            <Label Content="Mintues for simulteor "  Style="{StaticResource SubHeaderLabel2}" Foreground="{StaticResource brown}"  VerticalContentAlignment="Center" HorizontalContentAlignment="Center" HorizontalAlignment="Center" Height="43" Grid.Row="1" VerticalAlignment="Center" Width="180"  FontFamily="Cooper Black" />

        </Grid>

    </Grid>
</Window>
