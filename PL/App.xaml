        <!-- Text Style -->
        <Style x:Key="ElegantTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="{StaticResource brown}"/>
            <Setter Property="Padding" Value="10,8"/>
