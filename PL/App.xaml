        <!-- Window Style -->
            <Style x:Key="MainWindow" TargetType="Window">
                <Setter Property="Background" Value="{StaticResource cream}"/>
                <Setter Property="FontFamily" Value="Segoe UI"/>
            </Style>

            <!-- Main Content Panel -->
            <Style x:Key="MainPanel" TargetType="Grid">
                <Setter Property="Background" Value="{StaticResource cream}"/>
                <Setter Property="Margin" Value="20"/>
            </Style>

        
        
            <!-- Primary Button -->
            <Style x:Key="PrimaryButton" TargetType="Button">
                <Setter Property="Background" Value="{StaticResource tile}"/>
                <Setter Property="Foreground" Value="{StaticResource brown}"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Padding" Value="20,10"/>
                <Setter Property="Margin" Value="5"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                            CornerRadius="10"
                            BorderThickness="0">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="10" 
                                            ShadowDepth="2" 
                                            Opacity="0.2"/>
                                </Border.Effect>
                                <ContentPresenter HorizontalAlignment="Center" 
                                        VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="{StaticResource litePink}"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

        <!-- Primary Brown Button -->
        <Style x:Key="PrimaryBrownButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource liteBrowne}"/>
            <Setter Property="Foreground" Value="{StaticResource brown}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                  CornerRadius="10"
                  BorderThickness="0">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="10" 
                                  ShadowDepth="2" 
                                  Opacity="0.2"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" 
                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource tile}"/>
                </Trigger>
            </Style.Triggers>
        </Style>


        <!--DataGrid Style-->
        <Style x:Key="CustomDataGridStyle" TargetType="DataGrid">
            <!-- Base DataGrid Style -->
            <Setter Property="Background" Value="{StaticResource cream}"/>
            <Setter Property="BorderBrush" Value="{StaticResource liteBrowne}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="{StaticResource brown}"/>
            <Setter Property="AlternationCount" Value="2"/>

            <!-- Column Header Style -->
            <Setter Property="ColumnHeaderStyle">
                <Setter.Value>
                    <Style TargetType="{x:Type DataGridColumnHeader}">
                        <Setter Property="Background" Value="{StaticResource cream}"/>
                        <Setter Property="Foreground" Value="{StaticResource brown}"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="Padding" Value="10,8"/>
                        <Setter Property="BorderBrush" Value="{StaticResource brown}"/>
                        <Setter Property="BorderThickness" Value="0,0,1,1"/>
                    </Style>
                </Setter.Value>
            </Setter>

            <!-- Row Style -->
            <Setter Property="RowStyle">
                <Setter.Value>
                    <Style TargetType="{x:Type DataGridRow}">
                        <Setter Property="Background" Value="{StaticResource cream}"/>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="{StaticResource litePurple}"/>
                                <Setter Property="Foreground" Value="{StaticResource brown}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Setter.Value>
            </Setter>

            <!-- Cell Style -->
            <Setter Property="CellStyle">
                <Setter.Value>
                    <Style TargetType="{x:Type DataGridCell}">
                        <Setter Property="Padding" Value="8,6"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource liteBlue}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>

