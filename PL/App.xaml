<Application x:Class="PL.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PL"
             StartupUri="EnterToSystemWindow.xaml">
    <Application.Resources>
        
        <!--picture-->
        <!--<ImageBrush x:Key="Logo" ImageSource="\Pictures\helpingLogo.png"/>-->
        <!--Enums-->
        <local:FiledToFilterVolunteerColection x:Key="FiledToFilterVlounteerColecthionKey" />
        <local:FiledToFilterCallColection x:Key="FiledToFilterCallColecthionKey" />
         <local:FiledToSortCallColection x:Key="FiledToSortCallColecthionKey" />
        <local:VolunteerRolesColection x:Key="VolunteerRolesKey" />
        <local:DistanceTypeColection x:Key="DistanceTypeKey" />
        <local:callTypeColection x:Key="callTypeKey" />
        <local:statusCColection x:Key="statusCKey" />
        <local:FiledOFCloseListColection x:Key="FiledOFCloseListColecthionKey" />
        <local:FiledOfOpenListColection x:Key="FiledOfOpenListColecthionKey" />
        <local:IsACtiveColection x:Key="IsActiveCollectionKey" />


        <!--converters-->
        <local:ConvertUpdateToTrue x:Key="ConvertUpdateToTrueKey"/>
        <local:ConvertNullToTrue x:Key="ConvertNullToTrueKey"/>
        <local:ConvertNullToVisibility x:Key="ConvertNullToVisibilityKey"/>
        <local:ConvertFalseToHidden x:Key="ConvertFalseToHiddenKey"/>
        <local:ConvertISActive x:Key="ConvertISActiveKey" />
        <local:ConvertStatusEditableForIsEnabled x:Key="ConvertStatusEditableForIsEnabled" />
        <local:ConvertStatusEditableForIsReadOnly x:Key="ConvertStatusEditableForIsReadOnlyKey" />
        <local:ConvertBoolToVisibility x:Key="ConvertBoolToVisibilityKey" />
        <local:StatusToColorConverter x:Key="StatusToColorConverter" />
        <local:CallTypeToColorConverter x:Key="CallTypeToColorConverter" />



        <!--color pallte-->
        <SolidColorBrush x:Key="litePurple" Color="#dcc6e0"/>
        <SolidColorBrush x:Key="cream" Color="#fff5e1"/>
        <SolidColorBrush x:Key="tile" Color="#98c8b9"/>
        <SolidColorBrush x:Key="liteBrowne" Color="#ba9884"/>
        <SolidColorBrush x:Key="liteBlue" Color="#aee5ff"/>
        <SolidColorBrush x:Key="litePink" Color="#f1c1cc"/>
        <SolidColorBrush x:Key="brown" Color="#573c2b"/>
        <SolidColorBrush x:Key="Turquoise" Color="#30D5C8"/>
        <SolidColorBrush x:Key="liteTurquoise" Color="#b3f0e9"/>
        <SolidColorBrush x:Key="Pink" Color="#FFC0CB"/>
        <SolidColorBrush x:Key="DarkPink" Color="#FF1493"/>


        <!-- Window Style -->
            <Style x:Key="MainWindow" TargetType="Window">
                <Setter Property="Background" Value="{StaticResource cream}"/>
                <Setter Property="FontFamily" Value="Segoe UI"/>
            </Style>

            <!-- Main Content Panel -->
            <Style x:Key="MainPanel" TargetType="Grid">
                <Setter Property="Background" Value="{StaticResource cream}"/>
                <Setter Property="Margin" Value="20"/>
            </Style>

        
        
            <!-- Primary Button -->
            <Style x:Key="PrimaryButton" TargetType="Button">
                <Setter Property="Background" Value="{StaticResource tile}"/>
                <Setter Property="Foreground" Value="{StaticResource brown}"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Padding" Value="20,10"/>
                <Setter Property="Margin" Value="5"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                            CornerRadius="10"
                            BorderThickness="0">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="10" 
                                            ShadowDepth="2" 
                                            Opacity="0.2"/>
                                </Border.Effect>
                                <ContentPresenter HorizontalAlignment="Center" 
                                        VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="{StaticResource liteBrowne}"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

        <!-- Primary Brown Button -->
        <Style x:Key="PrimaryBrownButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource liteBrowne}"/>
            <Setter Property="Foreground" Value="{StaticResource brown}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                  CornerRadius="10"
                  BorderThickness="0">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="10" 
                                  ShadowDepth="2" 
                                  Opacity="0.2"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" 
                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource tile}"/>
                </Trigger>
            </Style.Triggers>
        </Style>


        <!--DataGrid Style-->
        <Style x:Key="CustomDataGridStyle" TargetType="DataGrid">
            <!-- Base DataGrid Style -->
            <Setter Property="Background" Value="{StaticResource cream}"/>
            <Setter Property="BorderBrush" Value="{StaticResource liteBrowne}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="{StaticResource brown}"/>
            <Setter Property="AlternationCount" Value="2"/>

            <!-- Column Header Style -->
            <Setter Property="ColumnHeaderStyle">
                <Setter.Value>
                    <Style TargetType="{x:Type DataGridColumnHeader}">
                        <Setter Property="Background" Value="{StaticResource cream}"/>
                        <Setter Property="Foreground" Value="{StaticResource brown}"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="Padding" Value="10,8"/>
                        <Setter Property="BorderBrush" Value="{StaticResource brown}"/>
                        <Setter Property="BorderThickness" Value="0,0,1,1"/>
                    </Style>
                </Setter.Value>
            </Setter>

            <!-- Row Style -->
            <Setter Property="RowStyle">
                <Setter.Value>
                    <Style TargetType="{x:Type DataGridRow}">
                        <Setter Property="Background" Value="{StaticResource cream}"/>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="{StaticResource litePurple}"/>
                                <Setter Property="Foreground" Value="{StaticResource brown}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Setter.Value>
            </Setter>

            <!-- Cell Style -->
            <Setter Property="CellStyle">
                <Setter.Value>
                    <Style TargetType="{x:Type DataGridCell}">
                        <Setter Property="Padding" Value="8,6"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource liteBlue}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Secondary Button -->
            <Style x:Key="SecondaryButton" TargetType="Button">
                <Setter Property="Background" Value="{StaticResource litePurple}"/>
                <Setter Property="Foreground" Value="{StaticResource brown}"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Padding" Value="15,8"/>
                <Setter Property="Margin" Value="5"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                            CornerRadius="8"
                            BorderThickness="0">
                                <ContentPresenter HorizontalAlignment="Center" 
                                        VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="{StaticResource litePink}"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

        <!--Delete Button-->
        <Style x:Key="DeleteButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource liteTurquoise}"/>
            <Setter Property="Foreground" Value="{StaticResource brown}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderBrush" Value="{StaticResource brown}"/>
            <!-- צבע הגבול החום -->
            <Setter Property="BorderThickness" Value="1"/>
            <!-- עובי הגבול הדק -->
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="0">
                            <!-- CornerRadius שומר על המסגרת מרובעת -->
                            <ContentPresenter HorizontalAlignment="Center" 
                                     VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource Turquoise}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!--Cancel Button-->
        <Style x:Key="CancelButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource Pink}"/>
            <Setter Property="Foreground" Value="{StaticResource brown}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderBrush" Value="{StaticResource brown}"/>
            <!-- צבע הגבול החום -->
            <Setter Property="BorderThickness" Value="1"/>
            <!-- עובי הגבול הדק -->
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="0">
                            <!-- CornerRadius שומר על המסגרת מרובעת -->
                            <ContentPresenter HorizontalAlignment="Center" 
                                     VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource DarkPink}"/>
                </Trigger>
            </Style.Triggers>
        </Style>


        <!-- Text Style -->
        <Style x:Key="ElegantTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="{StaticResource brown}"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                            CornerRadius="8"
                            BorderBrush="{StaticResource liteBrowne}"
                            BorderThickness="1">
                            <Grid>
                                <ScrollViewer x:Name="PART_ContentHost"
                                        Margin="5,0"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource tile}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        

        <!-- Content Card -->
            <Style x:Key="ContentCard" TargetType="Border">
                <Setter Property="Background" Value="White"/>
                <Setter Property="CornerRadius" Value="15"/>
                <Setter Property="Padding" Value="20"/>
                <Setter Property="Margin" Value="10"/>
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect BlurRadius="15" 
                                Direction="315"
                                ShadowDepth="3" 
                                Opacity="0.1"/>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- Header Style -->
            <Style x:Key="PageHeader" TargetType="TextBlock">
                <Setter Property="Foreground" Value="{StaticResource brown}"/>
                <Setter Property="FontSize" Value="28"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="Margin" Value="0,0,0,20"/>
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect BlurRadius="20" 
                                Direction="315"
                                ShadowDepth="2" 
                                Opacity="0.2"/>
                    </Setter.Value>
                </Setter>
            </Style>


      


        <!--Style for DataGridTextColumn to remove border around TextBox-->
        <Style TargetType="TextBox">
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="{StaticResource cream}"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

       

            <!-- Navigation Menu -->
            <Style x:Key="NavButton" TargetType="Button">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Foreground" Value="{StaticResource brown}"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Padding" Value="15,10"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                            CornerRadius="8"
                            BorderThickness="0">
                                <ContentPresenter HorizontalAlignment="Left" 
                                        VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="{StaticResource litePink}"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

        <Style x:Key="MainHeaderLabel" TargetType="Label">
            <Setter Property="Foreground" Value="{StaticResource brown}"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,15,0,10"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="15" 
                                Direction="315"
                                ShadowDepth="2" 
                                Opacity="0.2"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- כותרת משנית -->
        <Style x:Key="SubHeaderLabel" TargetType="Label">
            <Setter Property="Foreground" Value="{StaticResource brown}"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,10,0,5"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
        </Style>

        <!-- כותרת משנית 2 -->
        <Style x:Key="SubHeaderLabel2" TargetType="Label">
            <Setter Property="Foreground" Value="{StaticResource brown}"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,10,0,5"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
        </Style>

        <!-- תווית מידע -->
        <Style x:Key="InfoLabel" TargetType="Label">
            <Setter Property="Background" Value="{StaticResource liteBlue}"/>
            <Setter Property="Foreground" Value="{StaticResource brown}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Label">
                        <Border Background="{TemplateBinding Background}"
                            CornerRadius="8"
                            BorderThickness="0">
                            <ContentPresenter Margin="{TemplateBinding Padding}"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- תווית הערה -->
        <Style x:Key="NoteLabel" TargetType="Label">
            <Setter Property="Background" Value="{StaticResource litePurple}"/>
            <Setter Property="Foreground" Value="{StaticResource brown}"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Label">
                        <Border Background="{TemplateBinding Background}"
                            CornerRadius="6"
                            BorderThickness="0">
                            <ContentPresenter Margin="{TemplateBinding Padding}"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="MenuButton" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="{StaticResource brown}"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontFamily" Value="Cooper Black"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                            CornerRadius="15"
                            BorderThickness="0">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="15" 
                                            Direction="315"
                                            ShadowDepth="3" 
                                            Opacity="0.2"/>
                            </Border.Effect>
                            <Grid>
                                <Border x:Name="overlay" 
                                    Background="{StaticResource tile}"
                                    Opacity="0"
                                    CornerRadius="15"/>
                                <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="overlay" Property="Opacity" Value="0.2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

      
             <!--ListBox Style--> 
            <Style x:Key="CustomListBox" TargetType="ListBox">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Padding" Value="0"/>
                <Style.Resources>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Background" Value="{StaticResource cream}"/>
                        <Setter Property="Margin" Value="0,0,0,5"/>
                        <Setter Property="Padding" Value="10"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListBoxItem">
                                    <Border Background="{TemplateBinding Background}"
                                    CornerRadius="6"
                                    BorderThickness="0">
                                        <ContentPresenter/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" 
                                            Value="{StaticResource litePurple}"/>
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" 
                                            Value="{StaticResource litePink}"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Style.Resources>
            </Style>

        </Application.Resources>
</Application>